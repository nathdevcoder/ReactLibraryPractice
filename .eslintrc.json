{
  "extends": "next/core-web-vitals",
  "rules": {
    "semi": ["error", "never"],
    "indent": ["error", 2],
    "max-len": ["error", { "code": 200 }],
    "curly": ["error", "multi"],
    "brace-style": ["error", "1tbs", { "allowSingleLine": true }],
    "arrow-body-style": ["error", "as-needed"],
    "max-lines": ["error", 500],
    "no-unused-vars": ["error"],
    "react-hooks/exhaustive-deps": "error"
  },
  "overrides": [
    {
      "files": ["**/*.d.ts"],
      "rules": {
        "no-unused-vars": "off"
      }
    }
  ]
}
